
<!-- indian_traffic_routes.rou.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<routes>
    <!-- Vehicle Types with Indian Characteristics -->
    <vType id="car" length="4.50" width="1.80" accel="2.6" decel="4.5" sigma="0.6" maxSpeed="16.67"
           minGap="0.3" tau="0.5" carFollowModel="IDM"
           lcStrategic="1.0" lcCooperative="0.3" lcSpeedGain="1.0" lcKeepRight="0.1"
           jmDriveAfterRedTime="2" jmDriveRedSpeed="3.0"
           latAlignment="arbitrary"/>
           
    <vType id="motorcycle" length="2.20" width="0.90" accel="3.5" decel="5.0" sigma="0.8" maxSpeed="19.44"
           minGap="0.2" tau="0.3" carFollowModel="IDM"
           lcStrategic="1.2" lcCooperative="0.2" lcSpeedGain="1.2" lcKeepRight="0.0"
           jmDriveAfterRedTime="3" jmDriveRedSpeed="4.0"
           latAlignment="arbitrary"/>
           
    <vType id="auto_rickshaw" length="3.20" width="1.40" accel="2.2" decel="4.0" sigma="0.7" maxSpeed="13.89"
           minGap="0.2" tau="0.4" carFollowModel="IDM"
           lcStrategic="1.1" lcCooperative="0.2" lcSpeedGain="1.1" lcKeepRight="0.0"
           jmDriveAfterRedTime="2.5" jmDriveRedSpeed="3.5"
           latAlignment="arbitrary"/>
           
    <vType id="bus" length="10.30" width="2.50" accel="1.8" decel="4.0" sigma="0.5" maxSpeed="13.89"
           minGap="0.5" tau="0.7" carFollowModel="IDM"
           lcStrategic="0.8" lcCooperative="0.4" lcSpeedGain="0.8" lcKeepRight="0.2"
           jmDriveAfterRedTime="1.5" jmDriveRedSpeed="2.5"
           latAlignment="center"/>
    
    <!-- Traffic Flows -->
    <flow id="car_flow_east" type="car" begin="0" end="3600" probability="0.25">
        <route edges="E1 E2"/>
    </flow>
    
    <flow id="motorcycle_flow_east" type="motorcycle" begin="0" end="3600" probability="0.35">
        <route edges="E1 E2"/>
    </flow>
    
    <flow id="auto_flow_east" type="auto_rickshaw" begin="0" end="3600" probability="0.25">
        <route edges="E1 E2"/>
    </flow>
    
    <flow id="bus_flow_east" type="bus" begin="0" end="3600" probability="0.05">
        <route edges="E1 E2"/>
    </flow>
    
    <flow id="car_flow_north" type="car" begin="0" end="3600" probability="0.20">
        <route edges="N1 N2"/>
    </flow>
    
    <flow id="motorcycle_flow_north" type="motorcycle" begin="0" end="3600" probability="0.30">
        <route edges="N1 N2"/>
    </flow>
</routes>