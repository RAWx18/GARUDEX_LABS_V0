<!-- indian_traffic_additional.add.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<additional>
    <!-- Traffic Light Program adapted for Indian conditions -->
    <tlLogic id="junction2" type="actuated" programID="0" offset="0">
        <param key="max-gap" value="3.0"/>
        <param key="detector-gap" value="2.0"/>
        <param key="show-detectors" value="true"/>
        
        <!-- Main phase for E-W traffic -->
        <phase duration="45" state="GGGrrrGGGrrr" minDur="30" maxDur="60"/>
        <phase duration="3"  state="yyyrrryyyrrr"/>
        <!-- Main phase for N-S traffic -->
        <phase duration="45" state="rrrGGGrrrGGG" minDur="30" maxDur="60"/>
        <phase duration="3"  state="rrryyyrrryyy"/>
    </tlLogic>
    
    <!-- Traffic Detectors -->
    <laneAreaDetector id="E1_0" lane="E1_0" pos="0" length="250" freq="10" file="E1_0_output.xml"/>
    <laneAreaDetector id="E1_1" lane="E1_1" pos="0" length="250" freq="10" file="E1_1_output.xml"/>
    <laneAreaDetector id="N1_0" lane="N1_0" pos="0" length="250" freq="10" file="N1_0_output.xml"/>
    
    <!-- Variable Speed Signs for Dynamic Speed Control -->
    <variableSpeedSign id="vss1" lanes="E1_0 E1_1 E1_2">
        <step time="0" speed="13.89"/>
        <!-- Reduced speed during peak hours -->
        <step time="28800" speed="11.11"/>  <!-- 8 AM -->
        <step time="36000" speed="13.89"/>  <!-- 10 AM -->
        <step time="61200" speed="11.11"/>  <!-- 5 PM -->
        <step time="68400" speed="13.89"/>  <!-- 7 PM -->
    </variableSpeedSign>
</additional>